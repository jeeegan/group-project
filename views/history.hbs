<div class="card">
  <div class="card-body">
    <h2>Request History</h2>

    <form action="/history" method="get" class="form-inline">
      <select name="status" class="form-control mr-3">
        <option value="">ALL</option>
        <option value="APPROVED">APPROVED</option>
        <option value="REJECTED">REJECTED</option>
        <option value="PENDING">PENDING</option>
      </select>
      <button class="btn btn-outline-primary">Filter</button>
    </form>
    

    {{#each holidays}}
    <hr>
    <strong>Start Date</strong>: {{formatDate this.startDate}} <br>
    <strong>End Date</strong>: {{formatDate this.endDate}} <br>
    <strong>Comment</strong>: {{this.employeeComment}} <br>
    <strong>Manager Comment</strong>: {{this.managerComment}} <br>
    <strong>Status</strong>: {{this.status}}
    {{/each}}
  </div>
</div>