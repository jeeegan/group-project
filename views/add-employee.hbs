<h2>Add Employee</h2>
<form action="/add-employee" method="POST">
  <h3>Employee Information</h3>
  Name:  <input type="text" id="employeeName" name="name"> <br>
  Username:  <input type="text" id="employeeUserName" name="username"> <br>
  Password: <input type="password" name="password"> <br>
  Email:  <input type="text" id="employeeEmail" name="email"> <br>
  Role:  <select name="role" id="employeeRole">
    <option value="EMPLOYEE">employee</option>
    <option value="MANAGER">manager</option>
    <option value="ADMIN">admin</option>
  </select>
  Linkedin: <input type="text" id="employeeLinkedin" name="linkedinUrl"> <br>
  Github:  <input type="text" id="employeeGithub" name="githubUrl"> <br>
  Holiday Allowance:  <input type="number" id="employeeAllowance" name="holidayAllowance"> <br>
  Start Date:  <input type="date" name="startDate"> <br>
  Job Title:  <input type="text" name="jobTitle"> <br>
  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>
  <button>Submit</button>
</form>